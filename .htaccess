# Permitir processar arquivos HTML como PHP
<FilesMatch "\.(html|htm)$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Outras configurações úteis
DirectoryIndex index.php index.html

# Proteger arquivos sensíveis
<FilesMatch "^(config\.php|auth-helpers\.php|database.*\.sql|\.htaccess)$">
    Order allow,deny
    Deny from all
</FilesMatch>
